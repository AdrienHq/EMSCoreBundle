
{% if attribute(parent, view.options.field) is defined %}
    {% for child in attribute(parent, view.options.field) %}
    	{% set data = child|data %}
    	{% if data %}
    		{% set key = child|split(':') %}
    	    {% set contentType = key[0]|get_content_type %}
        	<li id="{{ child }}" class="{% if contentType.name != view.contentType.name %}mjs-nestedSortable-no-nesting{% endif %}">
        		<div class="box-header">
            		<div class="pull-right box-tools">
            			<div class="btn-group>">
                        	<a href="{{ path('data.revisions', {type: key[0], ouuid:key[1]} ) }}" type="button" class="btn btn-primary btn-sm" data-toggle="tooltip" title="" data-original-title="{{ 'Revisions'|trans }}">
                          		<i class="fa fa-archive"></i>
 	                     	</a>
                        	<a type="button" class="btn btn-primary btn-sm remove-item" data-toggle="tooltip" title="" data-original-title="{{ 'Remove' }}">
                          		<i class="fa fa-trash"></i>
                          	</a>
            			</div>
                  	</div>
        			<i class="{% if contentType.icon %}{{ contentType.icon }} {% else %} fa fa-question {% endif %} "></i>
        			<h3 class="box-title">
    			    {% if (contentType.labelField) and (attribute(data, contentType.labelField)  is defined ) %}
                		{{ attribute(data, contentType.labelField) }}
                	{% else %}
                		{{ child }}
                	{% endif %}
    	            </h3>
        		</div>
        		{% if data.children is defined and data.children %}
        			<ol>
                		{% include "EMSCoreBundle:view:custom/hierarchical_item.html.twig" with {
                    		parent: data,
                        	view: view,
                    	} %}
        			</ol>
            	{% endif %}
        	</li>
        {% endif %}
    
    {% endfor %}
{% endif %}