{% extends 'EMSCoreBundle::base.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}{{ view.name }} of {{contentType.name}}{% endblock %}
{% block pagetitle %}{{ view.name }} of {{contentType.name}}{% endblock %} 
{% block subtitle %}{{ 'gallery view plugin'|trans }}{% endblock %} 


{% block body %}
      
      
	<div class="row">
    	<div class="col-md-12">
    		{% include "EMSCoreBundle:elasticsearch:search-form-filter.html.twig" with {
				form: form,
			} %}
		</div>
	</div>
	<!-- /.row -->
	
	
      <div class="row">
        <div class="col-md-12">
        	<div class="box">
        		<div class="box-body">
                	<div id="myCarousel" class="carousel slide" data-ride="carousel">
                      <!-- Indicators -->
                      <ol class="carousel-indicators">
                      	{% for item in data.hits.hits %}
	                        <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %}active{% endif %}"></li>
                        {% endfor %}
                      </ol>
                    
                      <!-- Wrapper for slides -->
                      <div class="carousel-inner">
                      	{% for item in data.hits.hits %}
                            <div class="item {% if loop.first %}active{% endif %}">
                            {% set file = attribute(item._source, view.options.imageField) %}
                            {% set path = path('ems.file.view', {'sha1':file.sha1, 'type':file.mimetype, 'name':file.filename }) %}
             				{% if view.options.imageAssetConfigIdentifier %}
             				    {% set path = path('ems_asset_processor', {'hash':file.sha1, 'processor': view.options.imageAssetConfigIdentifier, 'type':file.mimetype, 'name':file.filename }) %}
             				{% endif %}
                              <img 
                              	src="{{ path }}" 
                              	alt="{% if view.options.imageAltFields %}{{ attribute(item._source, view.options.imageAltFields) }}{% endif %}"
                              	class="img-responsive center-block"
                              >
                            </div>
                        {% endfor %}
                      </div>
                    
                      <!-- Left and right controls -->
                      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
        		</div>
        	</div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

{% endblock %} 


{% block javascripts %}

	{% include 'EMSCoreBundle:elasticsearch:search-javascript-filter.html.twig' %}
	
{% endblock %}	