{% trans_default_domain 'EMSCoreBundle' %}
<script type="text/javascript">
<!--

//-->

function prepareForm(value){
	$('.analyzer_option').closest('.form-group').hide();

		switch(value) {
			{% for key, fields in constant('EMS\\CoreBundle\\Form\\Field\\AnalyzerOptionsType::FIELDS_BY_TYPE') %}
			case '{{key}}':
				{% for field in fields %}
					$('#analyzer_options_{{ field }}').closest('.form-group').show();
				{% endfor %}
				break;
			{% endfor %}
		}
}


$(window).ready(function() {

	$('#analyzer_options_type').change(function(eventObject){
		prepareForm($(this).val());
	});

	prepareForm($('#analyzer_options_type').val())
	
});


</script>