<script type="text/javascript">
<!--

//-->

function prepareForm(value){
	console.log(value);
	$('.filter_option').closest('.form-group').hide();

		switch(value) {
			case 'stop':
				$('#filter_options_stopwords').closest('.form-group').show();
				$('#filter_options_ignore_case').closest('.form-group').show();
				$('#filter_options_remove_trailing').closest('.form-group').show();
				break;
		}
}


$(window).ready(function() {

	$('#filter_options_type').change(function(eventObject){
		prepareForm($(this).val());
	});

	prepareForm($('#filter_options_type').val())
	
});


</script>