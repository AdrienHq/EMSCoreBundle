{% extends '@EMSCore/base.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}{{ table.titleTransKey|trans }}{% endblock %}


{% block pagetitle %}{{ block('title') }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="box ">
            <div class="box-header with-border">
                <div class="btn-group  pull-right">
                    <a class="btn btn-xs btn-primary" href="{{ path('ems_core_channel_add') }}"><i class="fa fa-plus"></i> {{ table.addTransKey|trans }}</a>
                </div>
            </div>
            <div class="box-body with-border">
                <div class="table-responsive">
                    <table class="table table-condensed table-striped" data-datatable="{{ {

                    }|json_encode|e('html_attr') }}">
                        <thead>
                        <tr role="row">
                            <th class="nowrap text-center">{{ 'table.index.column.loop_count'|trans }}</th>
                            {% for column in table.columns %}
                                <th class="nowrap">{{ column.titleKey|trans }}</th>
                            {% endfor %}
                            <th class="nowrap">{{ 'table.index.column.actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for line in table %}
                                <tr>
                                    <td class="text-center">{{ loop.index }}</td>
                                    {% for column in table.columns %}
                                        <td class="nowrap">{{ attribute(line.data, column.attribute) }}</td>
                                    {% endfor %}
                                    <td>
                                        <div class="btn-group">
                                            {% for action in table.actions %}
                                                {% if action.post %}
                                                    {% include '@EMSCore/elements/post-button.html.twig' with {
                                                        'url': path(action.route, action.routeParameters|merge({(action.attributeName): line.data.id})),
                                                        'message': action.messageKey,
                                                        'label': action.labelKey,
                                                        'icon': action.icon
                                                    }%}
                                                {% else %}
                                                    {% include '@EMSCore/elements/get-button.html.twig' with {
                                                        'url':  path(action.route, action.routeParameters|merge({(action.attributeName): line.data.id})),
                                                        'label': action.labelKey,
                                                        'icon': action.icon
                                                    }%}
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </td>
                                </tr>
                            {%  endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{%  endblock %}